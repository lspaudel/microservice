<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<TargetEndpoint name="default">
    <Description>Target endpoint for Spring Cloud Gateway</Description>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows/>
    <HTTPTargetConnection>
        <!-- Use host.docker.internal for Docker/local development -->
        <!-- In production, replace with actual gateway hostname/IP -->
        <URL>http://host.docker.internal:8888</URL>
        <Properties/>
    </HTTPTargetConnection>
</TargetEndpoint>
